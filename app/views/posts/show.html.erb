<h1>SHOW POST</h1>
<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date">
	Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</p>

<p class="body">
	<%= @post.body %>
</p>


<%= link_to "Edit Post", edit_post_path(@post)  %> 
<!-- edit_post_path -->
<%= link_to 'Destroy', @post, :method => :delete, :confirm => "Are you sure?" %>

<a href="/">Back</a>